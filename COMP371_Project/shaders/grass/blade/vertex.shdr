#version 330 core

in vec3 i_position;
in vec2 i_texture;

out vec2 o_textureCoordinate;

uniform mat4 u_modelMat;
uniform mat4 u_viewMat;
uniform mat4 u_projectionMat;

void main() {
    o_textureCoordinate = i_texture;

    gl_Position = u_projectionMat * u_viewMat * u_modelMat * vec4(i_position, 1.0f);
}